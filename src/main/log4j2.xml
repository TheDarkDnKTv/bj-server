<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" packages="thedarkdnktv.openbjs">
    <Appenders>
        <Console name="SysOut" target="SYSTEM_OUT">
            <PatternLayout>
            	<LoggerNameSelector defaultPattern="[%d{HH:mm:ss}] [%logger/%level]: %msg%n">
            		<PatternMatch key="thedarkdnktv.openbjs." pattern="[%d{HH:mm:ss}] [%t/%level]: %msg%n"/>
            	</LoggerNameSelector>
            </PatternLayout>
            <Filters>
       			<ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
        		<ThresholdFilter level="fatal" onMatch="DENY"  onMismatch="NEUTRAL"/>
           </Filters>
        </Console>
        <Console name="SysErr" target="SYSTEM_ERR">
            <PatternLayout>
            	<LoggerNameSelector defaultPattern="[%d{HH:mm:ss}] [%logger/%level]: %msg%n">
            		<PatternMatch key="thedarkdnktv.openbjs." pattern="[%d{HH:mm:ss}] [%t/%level]: %msg%n"/>
            	</LoggerNameSelector>
            </PatternLayout>
            <Filters>
       			<ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
           </Filters>
        </Console>
        <RollingRandomAccessFile name="File" fileName="logs/latest.log" filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
            	<LoggerNameSelector defaultPattern="[%d{HH:mm:ss}] [%logger/%level]: %msg%n">
            		<PatternMatch key="thedarkdnktv.openbjs." pattern="[%d{HH:mm:ss}] [%t/%level]: %msg%n"/>
            	</LoggerNameSelector>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <OnStartupTriggeringPolicy />
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="ALL">
        	<AppenderRef ref="SysErr"/>
            <AppenderRef ref="SysOut"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>